{{> navHome}}

<header class="">
    <div class="bg-hero-md md:h-72 h-80 flex items-center justify-center" >
        <section class="block">
            <div class="flex justify-center pb-4 animate-bounce">
                <img class="h-12 px-2" src="./img/star.png" alt="">
                <img class="h-12 px-2" src="./img/star.png" alt="">
                <img class="h-12 px-2" src="./img/star.png" alt="">
                <img class="h-12 px-2" src="./img/star.png" alt="">
                <img class="h-12 px-2" src="./img/star.png" alt="">
            </div>
            <h1 class="md:text-6xl text-4xl text-center text-[#E1D7C6]">Eval√∫a Tus Juegos Favoritos</h1>
            <p class="md:text-3xl text-2xl text-center text-[#E1D7C6] pt-4">Conoce las opiniones de distintos usuarios</p>
        </section>
    </div>
</header>

<main class="container mx-auto">
    <section id="gamesCards" class="grid md:grid-cols-3 gap-14 py-10 md:px-10 mx-4">
        {{#each response}}
        <div data-info="{{this.id}}" class="card bg-[#F8F4EA] flex flex-col items-center p-2 shadow-lg rounded-lg hover:cursor-pointer">
            <p class="text-xl font-semibold py-4">{{this.title}}</p>
            <img class="h-64 w-[60%] rounded-lg" src="{{this.urlImage}}" alt="">
            <p class="pt-2">{{this.year}}</p>
        </div>
        {{/each}}
    </section>
    <section class="flex items-center justify-center h-12 bg-[#F8F4EA] mb-6 mx-6">
        <div class="pages flex pl-16">
            <img id="previewPage" class="w-6 hover:cursor-pointer hidden" src="./img/left-arrow.png" alt="">
            <p id="page" class="px-6">1</p>
            <img id="nextPage" class="w-6 hover:cursor-pointer" src="./img/right-arrow.png" alt="">
        </div>
    </section>
</main>


{{> footer}}

<script type="module" src="./js/home.js"></script>