{{> navHome}}

<main class="container mx-auto">
    <section class="flex flex-col items-center justify-center px-4 my-10">
        <div class="bg-[#F8F4EA] shadow-lg rounded-lg p-4">
            <div>
                <h2 class="text-2xl text-center pb-6">{{this.title}}</h2>
                <img src="{{this.urlImage}}" class="h-96" alt="">
            </div>
            <div class="flex flex-col pt-4">
                <p>Año: {{this.year}}</p>
                <p>Estudio: {{this.studio}}</p>
            </div>
            <div>
                {{#if this.promedio}}
                <p>Valoración: {{this.promedio}} </p>
                {{else}}
                <p>Valoración: Sin Valoración </p>
                {{/if}}
            </div>
        </div>
    </section>
    <section>
        <div class="flex justify-start">
            <button class="bg-[#E1D7C6] rounded-lg px-2 py-1 my-2">Agregar Reseña</button>
        </div>
        <div class="">
            {{#each rows}}
            <article class="bg-[#F8F4EA] shadow-lg rounded-lg my-4 p-4">
                <p>{{this.userName}}</p>
                <p>Puntuación: {{this.score}}</p>
                <p>Comentarios: {{this.content}}</p>
            </article>
            {{/each}}
        </div>
    </section>
</main>

{{> footer}}
